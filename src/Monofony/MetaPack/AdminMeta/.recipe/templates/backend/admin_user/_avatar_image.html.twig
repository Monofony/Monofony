{% if app.user.avatar is not empty and app.user.avatar.path is not empty %}
    {% set path = vich_uploader_asset(app.user.avatar, 'file')|imagine_filter('app_backend_admin_user_avatar_thumbnail') %}
{% else %}
    {% set path = asset('assets/backend/img/avatar.png'|imagine_filter('app_backend_admin_user_avatar_thumbnail')) %}
{% endif %}

<img style="margin-right: 10px;" class="ui avatar image" src="{{ path }}">
