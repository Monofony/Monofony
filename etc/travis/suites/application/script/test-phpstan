#!/usr/bin/env bash

source "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/../../../../bash/common.lib.sh"

local code=0

print_header "Testing (PHPStan)" "AppName"
run_command "vendor/bin/phpstan analyse -c phpstan.neon -l 1 src/monofony-core/src" || code=$?
run_command "vendor/bin/phpstan analyse -c phpstan.neon -l 1 src/monofony-backend/src" || code=$?
run_command "vendor/bin/phpstan analyse -c phpstan.neon -l 1 src/monofony-frontend/src" || code=$?

exit ${code}
