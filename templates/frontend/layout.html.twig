<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}AppName{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    {% block stylesheets %}
        {% include 'SyliusUiBundle::_stylesheets.html.twig' with {'path': 'assets/frontend/css/style.css'} %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body class="pushable">
<div class="pusher">
    {% block top %}
        <div id="menu" class="ui large sticky inverted stackable menu">
            {% include 'frontend/_menu.html.twig' %}
        </div>
    {% endblock %}

    <div id="ui container">
        {% block header %}
            <header>
                {% include 'frontend/_header.html.twig' %}
            </header>
        {% endblock %}

        {% include 'frontend/_flashes.html.twig' %}

        {% block content %}
        {% endblock %}
    </div>

    {% block footer %}
        {% include 'frontend/_footer.html.twig' %}
    {% endblock %}
</div>

{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/frontend/js/app.js') }}"></script>
{% endblock %}
{% include '@SyliusUi/Modal/_confirmation.html.twig' %}
</body>
</html>
