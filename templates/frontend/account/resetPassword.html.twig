{% extends 'frontend/layout.html.twig' %}

{% block bodyClass %}security resetting{% endblock %}

{% set pageTitle =  'sylius.ui.reset_password'|trans %}

{% block content %}
    <h1>{{ pageTitle }}</h1>
    <h2>{{ 'sylius.ui.set_a_new_password_for_your_account'|trans }}</h2>

    <div class="small-12 column user-form">

        {% form_theme form 'frontend/form/theme.html.twig' %}

        {{ form_start(form, {'action': path('app_frontend_password_reset', {'token' : user.passwordResetToken}), 'attr': {'class': 'form-signin', 'novalidate': 'novalidate'}}) }}

        {{ form_row(form.password.first) }}
        {{ form_row(form.password.second) }}

        {{ form_row(form._token) }}
        <div class="action-buttons">
            <button class="button" type="submit" id="_submit" name="_submit">{{ 'sylius.ui.reset_button'|trans }}</button>
        </div>
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}
