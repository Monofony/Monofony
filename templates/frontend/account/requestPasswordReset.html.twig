{% extends 'frontend/layout.html.twig' %}

{% block bodyClass %}security resetting{% endblock %}

{% set pageTitle =  'sylius.ui.reset_password'|trans %}

{% block content %}
    <h1>{{ pageTitle }}</h1>
    <h2>{{ 'sylius.ui.set_a_new_password_for_your_account'|trans }}</h2>

    {% form_theme form 'frontend/form/theme.html.twig' %}

    <form class="form-signin" action="{{ path('sylius_user_request_password_reset_token') }}" method="POST">

        {{ form_row(form.email, {attr: {'placeholder': 'sylius.ui.email'|trans}}) }}

        {{ form_rest(form) }}

        <div class="action-buttons">
            <button class="button" type="submit" id="_submit"
                    name="_submit">{{ 'sylius.ui.reset_button'|trans }}</button>
        </div>
    </form>
{% endblock %}
